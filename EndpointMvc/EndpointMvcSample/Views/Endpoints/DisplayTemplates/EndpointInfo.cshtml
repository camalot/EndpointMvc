@using EndpointMvc.Extensions;
@using EndpointMvc.Models;

@model EndpointInfo

<div class="endpoint-info well" id="@Model.QualifiedName.Replace(".","_")">
	<h3>@Model.Name</h3>
	<div>@Model.Description</div>
	<div>@Model.ReturnType</div>
	<div>
		<table class="table table-bordered table-condensed">
			<tr>
				<th>@Html.LiteralFor(m => m.Deprecated)</th>
				<th>@Html.LiteralFor(m => m.Obsolete)</th>
				<th>@Html.LiteralFor(m => m.RequiresAuthentication)</th>
				<th>@Html.LiteralFor(m => m.RequireSsl)</th>
			</tr>
			<tr>
				<td>@Html.DisplayFor(m => m.Deprecated ) </td>
				<td>@Html.DisplayFor(m => m.Obsolete ) </td>
				<td>@Html.DisplayFor(m => m.RequiresAuthentication ) </td>
				<td>@Html.DisplayFor(m => m.RequireSsl )</td>
			</tr>
		</table>
	</div>
	@Html.Partial("_CustomProperties",Model.Properties)
	@if ( Model != null && Model.ContentTypes.Count > 0 ) {
	<div>
		<table class="table table-bordered table-condensed">
			<tr>
				<th>Content Types</th>
			</tr>
			@foreach ( var item in Model.ContentTypes ) {
				<tr>
					<td>@item</td>
				</tr> 
			}
		</table>
	</div>
	}
	<div class="well">
		<h4>Methods</h4>
		<ul class="unstyled">
			@foreach ( var method in @Model.HttpMethods ) {
				<li><strong>@method</strong></li>
			}
		</ul>
	</div>
	<div class="well">
		<h4>Parameters</h4>
		@Html.DisplayFor(m => m.Params)
	</div>
</div>
