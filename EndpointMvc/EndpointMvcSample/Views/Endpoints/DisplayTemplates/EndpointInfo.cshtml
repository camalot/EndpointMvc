@using EndpointMvc.Extensions;
@using EndpointMvc.Models;

@model EndpointInfo

<div class="endpoint-info well" id="@Model.QualifiedName.Replace(".","_")">
	<h3>@Model.Name</h3>
	<div>@Model.Description</div>
	<div>
		<table class="table table-bordered table-condensed">
			<tr>
				<th>@Html.LiteralFor(m => m.Deprecated)</th>
				<th>@Html.LiteralFor(m => m.RequiresAuthentication)</th>
				<th>@Html.LiteralFor(m => m.Obsolete)</th>
			</tr>
			<tr>
				<td>@Html.CheckBoxFor(m => m.Deprecated, new { disabled = "disabled" } ) </td>
				<td>@Html.CheckBoxFor(m => m.RequiresAuthentication, new { disabled = "disabled" } ) </td>
				<td>@Html.CheckBoxFor(m => m.Obsolete, new { disabled = "disabled" } ) </td>
			</tr>
		</table>
	</div>
	<div class="well">
		<h4>Methods</h4>
		<ul class="unstyled">
			@foreach ( var method in @Model.HttpMethods ) {
				<li><strong>@method</strong></li>
			}
		</ul>
	</div>
	<div class="well">
		<h4>Parameters</h4>
		@Html.DisplayFor(m => m.Params)
	</div>

</div>
