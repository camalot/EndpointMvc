@using EndpointMvc.Extensions;
@using EndpointMvc.Models;

@model ParamInfo

<div>
	<h4>@Model.Name <span class="endpoint-type small">@Model.Type</span></h4>
	<div>@Model.Description</div>
	@if( Model.Default != null ) {
		<div>@Model.Default</div>
	}
	<table class="table table-striped table-bordered table-condensed">
		<tr>
			<th>@Html.LiteralFor(m => m.Optional)</th>
		</tr>
		<tr>
			<td>@Html.CheckBoxFor(m => m.Optional, new { disabled = "disabled" } ) </td>
		</tr>
	</table>
	<div>Default: @(Model.Default == null ? "null": Model.Default.ToString())</div>
</div>